<div class="content-container">
  <div class="container-flex">
    <h2>MY TASKS</h2>
    <div class="container-flex">
      <p class="grow">ADD NEW TASK</p>
      <%= link_to new_task_path do %> <i class="fas fa-plus icon"></i><% end %>
    </div>
  </div>



  <div class="container-tasks">
    <% @tasks.each do |task| %>
    <ul class="list-group">
      <li class="list-group-item border-0">
        <% if task.completed %>
          <i class="far fa-check-square"></i>
          <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task_path(task) do%><%= task.title %><% end %>
        <%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete?' } do %>
        <i class="fas fa-trash-alt icon mx-2"></i>
        <% end %>
      </li>

    </ul>
    <% end %>
  </div>

  <%= link_to new_task_path do %>
    <div class="backlink">
      BACK TO LIST
    </div>
  <% end %>

</div>




